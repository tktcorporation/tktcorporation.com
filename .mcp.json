{
  "mcpServers": {
    "lapras": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@lapras-inc/lapras-mcp-server"],
      "env": {
        "LAPRAS_API_KEY": "${LAPRAS_API_KEY}"
      }
    },
    "serena": {
      "type": "stdio",
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/oraios/serena",
        "serena",
        "start-mcp-server",
        "--context",
        "ide-assistant",
        "--project",
        "."
      ],
      "env": {}
    },
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": {}
    }
  }
}
