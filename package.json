{
  "name": "app",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "lint": "biome check . && tsc --noEmit && npm run lint:actions",
    "lint:biome": "biome check .",
    "lint:actions": "node-actionlint",
    "format": "biome format --write .",
    "lint:fix": "biome check --write .",
    "typecheck": "tsc",
    "screenshot": "tsx scripts/screenshot.ts",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test tests/e2e/",
    "test:e2e:ui": "playwright test tests/e2e/ --ui",
    "test:all": "npm run test:run && npm run test:e2e",
    "test:display": "tsx scripts/test-display.ts",
    "update:lapras": "tsx scripts/update-lapras-data.ts"
  },
  "dependencies": {
    "@icons-pack/react-simple-icons": "^13.8.0",
    "@radix-ui/react-slot": "^1.2.4",
    "@tailwindcss/vite": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitejs/plugin-react": "^5.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "firebase": "^12.7.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^3.0.4",
    "lucide-react": "^0.562.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-icons": "^5.5.0",
    "react-router-dom": "^7.13.0",
    "simple-icons": "^16.2.0",
    "spectacle": "^10.2.3",
    "spectacle-renderer": "^0.0.3",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.2.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@playwright/test": "^1.57.0",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@tktco/node-actionlint": "^1.6.0",
    "@types/http-server": "^0.12.4",
    "@types/node": "^24.10.4",
    "@vitest/ui": "^4.0.16",
    "devicon": "^2.17.0",
    "happy-dom": "^20.0.11",
    "http-server": "^14.1.1",
    "playwright": "^1.57.0",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.21.0",
    "typescript": "5.9.3",
    "vite": "^7.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": "24"
  },
  "simple-git-hooks": {
    "pre-push": "npm run lint && npm run typecheck"
  }
}
