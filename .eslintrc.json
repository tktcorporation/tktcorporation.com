{
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "astro"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:astro/recommended"
  ],
  "env": {
    "node": true
  },
  "overrides": [
    {
      "files": ["*.astro"],
      "parser": "astro-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      }
    }
  ],
  "rules": {
    "@typescript-eslint/no-require-imports": "off"
  }
}
